<!DOCTYPE html>
<html>
  <head>
    <title>FlashUnified Custom Renderer</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <script type="importmap">
    {
      "imports": {
        "flash_unified": "<%= asset_path('flash_unified/flash_unified.js') %>",
        "flash_unified/auto": "<%= asset_path('flash_unified/auto.js') %>",
        "flash_unified/turbo_helpers": "<%= asset_path('flash_unified/turbo_helpers.js') %>",
        "flash_unified/network_helpers": "<%= asset_path('flash_unified/network_helpers.js') %>"
      }
    }
    </script>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "turbo", type: "module" %>

    <!-- Register custom renderer BEFORE auto initialization -->
    <script type="module">
      import { setFlashMessageRenderer } from "flash_unified";
      setFlashMessageRenderer((messages) => {
        const ul = document.getElementById('custom-render-target');
        if (!ul) return;
        messages.forEach(({ type, message }) => {
          if (!message) return;
          const li = document.createElement('li');
          li.dataset.type = type || 'notice';
          li.textContent = message;
          ul.appendChild(li);
        });
      });
    </script>

    <!-- Auto init after custom renderer is set -->
    <script type="module">
      import "flash_unified/auto";
    </script>
  </head>
  <body>
    <%= flash_global_storage %>
    <%= flash_templates %>
    <%= flash_general_error_messages %>
    <%= flash_container %>

    <%= yield %>
  </body>
</html>
