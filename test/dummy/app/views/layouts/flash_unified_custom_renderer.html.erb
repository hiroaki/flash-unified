<!DOCTYPE html>
<html data-flash-unified-auto-init="false">
  <head>
    <title>FlashUnified Custom Renderer</title>
    <meta name="viewport" content="width=device-width,initial-scale=1">
    <%= csrf_meta_tags %>
    <%= csp_meta_tag %>
    <link rel="modulepreload" href="<%= asset_path('flash_unified/all.bundle.js') %>">
    <script type="importmap">
    {
      "imports": {
        "flash_unified/all": "<%= asset_path('flash_unified/all.bundle.js') %>"
      }
    }
    </script>
    <%= stylesheet_link_tag "application" %>
    <%= javascript_include_tag "turbo", type: "module" %>

    <!-- Register custom renderer and kick off manual initialization -->
    <script type="module">
      import { setFlashMessageRenderer, installInitialRenderListener } from "flash_unified/all";
      setFlashMessageRenderer((messages) => {
        const ul = document.getElementById('custom-render-target');
        if (!ul) return;
        messages.forEach(({ type, message }) => {
          if (!message) return;
          const li = document.createElement('li');
          li.dataset.type = type || 'notice';
          li.textContent = message;
          ul.appendChild(li);
        });
      });
      installInitialRenderListener();
    </script>
  </head>
  <body>
    <%= flash_unified_sources(container: true, storage: false) %>

    <%= yield %>
  </body>
</html>
